:{$PORT} {
    # Устанавливаем корневую папку для сервера
   root * .

    # Включаем файловый сервер
   file_server

    # Управляем заголовками
   header {
        Content-Security-Policy "script-src 'self' 'unsafe-inline' 'unsafe-eval' https://unpkg.com https://googleapis.com https://earthquake.usgs.gov https://api.open-meteo.com https://tile.openstreetmap.org; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://unpkg.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://earthquake.usgs.gov https://api.open-meteo.com https://tile.openstreetmap.org https://unpkg.com; img-src 'self' data: https://unpkg.com https://*.tile.openstreetmap.org;"
   }
}
