:{$PORT} {
    # Устанавливаем корневую папку для сервера
   root * .

    # Включаем файловый сервер
   file_server

    # Управляем заголовками
   header {
        Content-Security-Policy "script-src 'self' https://unpkg.com https://esm.sh https://googleapis.com https://earthquake.usgs.gov https://api.open-meteo.com https://tile.openstreetmap.org; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://unpkg.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://earthquake.usgs.gov https://api.open-meteo.com https://tile.openstreetmap.org https://unpkg.com; img-src 'self' data: https://unpkg.com https://*.tile.openstreetmap.org;"
        
        X-Frame-Options "DENY"
        
        X-Content-Type-Options "nosniff"
        
        X-XSS-Protection "1; mode=block"
        
        -Server
   }
}
